{% extends "form_div_layout.html.twig" %}

{%- block form_start -%}
    {{- parent() -}}
{%- endblock form_start -%}


{%- block form -%}
    {{- parent() -}}
{%- endblock form -%}

{# If the form has an attribute "disabled", its inputs will be disabled as well  #}
{%- block choice_widget -%}
    {% set add_disabled = false %}

    {# Check if the form wrapping current choice widget has a "disabled" attribute #}
    {% if form.parent.vars is defined %}
        {% if form.parent.vars.attr["disabled"] is defined and form.parent.vars.attr["disabled"] %}
            {% set add_disabled = true %}
        {% endif %}

        {# If we're within a collection, we have to access its attributes trough parent.parent.parent #}
        {% if form.parent.parent.parent.vars.attr["disabled"] is defined and form.parent.parent.parent.vars.attr["disabled"] %}
            {% set add_disabled = true %}
        {% endif %}
    {% endif %}

    {% if add_disabled %}
        {% set disabled = true %}
    {% endif %}

    {{- parent() -}}
{%- endblock choice_widget -%}

{%- block submit_widget -%}
    {% set add_disabled = false %}

    {# Check if the form wrapping current choice widget has a "disabled" attribute #}
    {% if form.parent.vars is defined %}
        {% if form.parent.vars.attr["disabled"] is defined and form.parent.vars.attr["disabled"] %}
            {% set add_disabled = true %}
        {% endif %}

        {% if form.parent.parent.parent.vars.attr["disabled"] is defined and form.parent.parent.parent.vars.attr["disabled"] %}
            {% set add_disabled = true %}
        {% endif %}
    {% endif %}

    {% if add_disabled %}
        {% set disabled = true %}
    {% endif %}

    {{ parent() }}
{%- endblock submit_widget -%}

{%- block choice_widget_expanded -%}
    {% set add_disabled = false %}

    {# Check if the form wrapping current choice widget has a "disabled" attribute #}
    {% if form.parent.vars is defined %}
        {% if form.parent.vars.attr["disabled"] is defined and form.parent.vars.attr["disabled"] %}
            {% set add_disabled = true %}
        {% endif %}

        {% if form.parent.parent.parent.vars.attr["disabled"] is defined and form.parent.parent.parent.vars.attr["disabled"] %}
            {% set add_disabled = true %}
        {% endif %}
    {% endif %}

    {% if add_disabled %}
        {% set disabled = true %}
    {% endif %}

    <div class="widget-expanded" {{ block('widget_container_attributes') }}>
        {#{%- for child in form %}#}
            {#{{- form_label(child, null, {translation_domain: choice_translation_domain}) -}}#}
        {#{% endfor -%}#}

        {%- for child in form %}
            {{- form_widget(child, {
                parent_label_class: label_attr.class|default(''),
                translation_domain: choice_translation_domain,
                'attr': {'disabled': add_disabled}
            }) -}}
        {% endfor -%}
    </div>
{%- endblock choice_widget_expanded -%}


{%- block widget_attributes -%}
    {% set add_disabled = false %}

    {#Check if the form wrapping current choice widget has a "disabled" attribute#}
    {% if form.parent.vars is defined %}
        {% if form.parent.vars.attr["disabled"] is defined and form.parent.vars.attr["disabled"] %}
            {% set add_disabled = true %}
        {% endif %}

        {% if form.parent.parent.parent.vars.attr["disabled"] is defined and form.parent.parent.parent.vars.attr["disabled"] %}
            {% set add_disabled = true %}
        {% endif %}
    {% endif %}

    {% if add_disabled %}
        {% set disabled = true %}
    {% endif %}

    {{- parent() -}}
{%- endblock widget_attributes -%}
{# End of blocks that add attr disabled to disabled forms #}

{%- block collection_widget -%}
    {% if prototype is defined %}
        {%- set attr = attr|merge({'data-prototype': form_row(prototype) }) -%}
    {% endif %}

    {% if dataOptions is defined %}
        {%- set attr = attr|merge({'data-options': dataOptions }) -%}
    {% endif %}

    {{- block('form_widget') -}}
{%- endblock collection_widget -%}


{%- block collection_row -%}
    <div class="collection">
        {% embed "@TrinityAdmin/Form/form_layout.html.twig" %}
            {% block form_row_label_content %}
                {{- form_label(form) -}}
            {% endblock form_row_label_content %}

            {% block form_row_input_content %}
                {{- form_widget(form, { 'attr': {'class': 'collection-widget'} }) -}}
            {% endblock form_row_input_content %}
        {% endembed %}
    </div>
{%- endblock collection_row -%}


{%- block choice_widget_collapsed -%}
    {%- if required and placeholder is none and not placeholder_in_choices and not multiple -%}
        {% set required = false %}
    {%- endif -%}

    <div class="input-postfix-icon form-select">
        <div class="select form-control">
            <select {{ block('widget_attributes') }}{% if multiple %} multiple="multiple"{% endif %}>
                {%- if placeholder is not none -%}
                    <option
                            value=""{% if required and value is empty %} selected="selected"{% endif %}>{{ placeholder|trans({}, translation_domain) }}</option>
                {%- endif -%}
                {%- if preferred_choices|length > 0 -%}
                    {% set options = preferred_choices %}
                    {{- block('choice_widget_options') -}}
                    {%- if choices|length > 0 and separator is not none -%}
                        <option disabled="disabled">{{ separator }}</option>
                    {%- endif -%}
                {%- endif -%}
                {%- set options = choices -%}
                {{- block('choice_widget_options') -}}
            </select>
        </div>
    </div>
{%- endblock choice_widget_collapsed -%}


{%- block button_widget -%}
    {%- if label is empty -%}
        {%- if label_format is not empty -%}
            {% set label = label_format|replace({
            '%name%': name,
            '%id%': id,
            }) %}
        {%- else -%}
            {% set label = name|humanize %}
        {%- endif -%}
    {%- endif -%}

    <div class="text-center">
        {% if type is defined and type == "submit" %}
            <button type="{{ type|default('button') }}" {{ block('button_attributes') }}>{{ translation_domain is same as(false) ? label : label|trans({}, translation_domain) }}</button>
        {% else %}
            <input type="{{ type|default('button') }}" {{ block('button_attributes') }}
                   value="{{ label|trans({}, translation_domain) }}"/>
        {% endif %}
    </div>

{%- endblock button_widget -%}


{% block checkbox_widget -%}
    <div
        {% if form.vars.wrapper_attr is defined %}
            {# Working with TrinityCheckboxType #}

            {# Class insurance that it has checkbox#}
            {% set wrapperClass = "checkbox" %}
            {% if form.vars.wrapper_attr.class is defined %}
                {% set wrapperClass = wrapperClass ~ " " ~ form.vars.wrapper_attr.class %}
            {% endif %}

            {# render other attributes #}
            {% with { attr: form.vars.wrapper_attr|merge({class: wrapperClass}) } %}
                {{ block('attributes') }}
            {% endwith %}
        {% else %}
            {# Working with default CheckboxType #}
            {{ 'class="checkbox"' }}
        {% endif %}
    >
        {{- parent() -}}
        {# {{ form_label(form) }} for CheckBoxType displays label twice, inside form_label() and form_widget()#}
        {# setting attr => ['hide_widget_label' => true]#}
        {% if (form.vars.hide_widget_label is defined and form.vars.hide_widget_label) or (attr.disable_widget_label is defined and attr.disable_widget_label) %}
            <label for="{{ id }}"></label>
        {% else %}
            {{ form_label(form) }}
        {% endif %}
    </div>
    {{- form_errors(form) -}}
{%- endblock checkbox_widget %}


{# START - FORM_ROW #}
{%- block form_row -%}

    {% set choice = false %}
    {% for prefix in form.vars.block_prefixes %}
        {% if prefix == 'choice' %}
            {% set choice = true %}
        {% endif %}
    {% endfor %}

    {% set rowClass = "form-row" %}
    {% if form.vars.attr.rowClass is defined %}
        {% set rowClass = rowClass ~ " " ~ form.vars.attr.rowClass %}
    {% endif %}

    {% set rowId = "row_" ~ id  %}

    {% if form.parent.vars.collection_template is defined %}
        {% from form.parent.vars.collection_template import collection_child_start %}
        {{  collection_child_start(rowId, rowClass) }}
    {% else %}
        <div class="{{ rowClass }}{% if choice %} choice{% endif %}" id="{{ rowId }}">
    {% endif %}
        {% embed "@TrinityAdmin/Form/form_layout.html.twig" %}

            {% block form_row_content %}
                {% set class = "" %}
                {% if form.vars.attr.class is defined %}
                    {% set class = form.vars.attr.class %}
                {% endif %}
            {% endblock form_row_content %}

            {% block form_row_label_content %}
                {# check for TrinityCheckboxType #}
                {% if form.vars.is_inline is not defined or not form.vars.is_inline %}
                    {{- form_label(form) -}}
                {% endif %}
            {% endblock form_row_label_content %}

            {% block form_row_input %}
                {% for attrname,attrvalue in attr %}
                    {% if attrname == 'description' %}
                        <span class="description">{{ attrvalue }}</span>
                    {% endif %}
                {% endfor %}

                {% block form_row_input_content %}
                    {{- form_widget(form) -}}
                {% endblock form_row_input_content %}

            {% endblock form_row_input %}

        {% endembed %}


    {% if form.parent.vars.collection_template is defined %}
        {% from form.parent.vars.collection_template import collection_child_end %}
        {{  collection_child_end(rowId) }}
    {% else %}
        </div>
    {% endif %}

    {{- form_errors(form) -}}
{%- endblock form_row -%}
{# END - FORM_ROW #}


{# Add tooltip icons and tooltips next to form labels #}
{%- block form_label -%}

    {% set tooltip_text = '' %}

    {# If set as a variable in Twig #}
    {% if tooltip is defined and tooltip is not empty %}
        {% set tooltip_text = tooltip %}
    {# If set in as an attribute FormBuilder #}
    {% elseif label_attr.tooltip is defined and label_attr.tooltip is not empty %}
        {% set tooltip_text = label_attr.tooltip %}
    {% endif %}

    {% if tooltip_text is not empty %}
        {# Allows to position tooltips next to labels #}
        {% set label_attr = label_attr|merge({'class': 'display-inline'}) %}

        {# Render the form label #}
        {{- parent() -}}

        {% from '@TrinityAdmin/pageItems.html.twig' import tooltip %}
        {{ tooltip(tooltip_text) }}
    {% else %}
        {{- parent() -}}
    {% endif %}

{%- endblock form_label -%}