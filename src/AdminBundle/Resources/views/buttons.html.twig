{#
    Navbar action buttons (on the right of the panel)

    - parameter label (can be translation in format 'label | trans'
    - parameter url - use path() whenever you can
    - parameter class - optional - defines the button type, button-secondary is default
#}

{% macro navbar_action(label, url, class = "button-secondary", id = "") %}
    <a id="{{ id }}" class="button {{ class }} button-medium pull-right margin-none-vertical" href="{{ url }}">
        {%  if  '|trans' in label %}
            {{  label | split('|trans')[0] | trans}}
        {% elseif ' | trans' in label%}
            {{  label | split(' | trans')[0] | trans}}
        {% elseif '| trans' in label%}
            {{  label | split('| trans')[0] | trans}}
        {% else %}
            {{ label }}
        {% endif %}
    </a>
{% endmacro %}