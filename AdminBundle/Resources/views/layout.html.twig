<!DOCTYPE html>
<html>
<head>

    {% block head %}
        <meta charset="UTF-8" />
        <title>{% block title %}Trinity Administration{% endblock %}</title>
        <meta name="viewport" content="initial-scale=1, width=device-width, maximum-scale=1, minimum-scale=1, user-scalable=no">
    {% endblock %}

    {% block stylesheets %}
    {% endblock %}

    {% block jquery %}
    {% endblock %}

    {% block headerJavascripts %}
    {% endblock %}

    {% block highcharts %}
    {% endblock %}

    {% block bowtie %}
        {% stylesheets filter='lessphp' '@TrinityAdminBundle/Resources/Public/css/bowtie.less' %}
            <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
        {% endstylesheets %}
    {% endblock %}

    {% block admin %}
        {% stylesheets filter='lessphp' '@TrinityAdminBundle/Resources/Public/css/admin.less' %}
            <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
        {% endstylesheets %}
    {% endblock %}

</head>

<body class="administration-body controller_{{ get_controller_name() }} action_{{ get_action_name() }}">

    <div class="side-bar">

        <div class="dropdown-login">
            <label class="show-drop" for="dropdown-login">
                <span class="tiecons tiecons-circle-normal user-circle-login"><span class="tiecons tiecons-user-negative"></span></span>
                <span class="username">{{ app.user.username }}</span>
            </label>
            <input type="checkbox" id="dropdown-login" class="display-none"/>

            {{ knp_menu_render('user_menu', {"currentClass": "active", "template" : "TrinityAdminBundle::kmp_menu.html.twig"}) }}

            <div class="dropdown-hide"></div>

        </div>

        <input type="checkbox" id="show-sidebar">

        {{ knp_menu_render('sidebar', {"currentClass": "active", "template" : "TrinityAdminBundle::kmp_menu.html.twig"}) }}

        <span class="necktie necktielogo3"></span>
        <span class="version">{{ getVersion() }}</span>
    </div>

    <div class="container-fluid container-with-sidebar">
        <div class="row">
            <div class="head-content">
                <h2 class="content-header">{% block pageTitle %} Dashboard {% endblock %}</h2>

                <div class="breadcrumbs">
                    {{ wo_render_breadcrumbs() }}
                </div>
            </div>
        </div>


        <div id="flashMessages">

            <input id="close-alert-{type}-{id}" type="radio" class="ajax-checkbox checkbox-none">
            <div class="alert alert-{type} ajax-alert">
                <div class="container">
                    <div class="row">
                        <div class="span-none-padding-mini-24">
                            <label for="close-alert-{type}-{id}" class="alert-label">
                                <i class="tiecons tiecons-cross-light alert-close-icon"></i>
                            </label>
                            <div class="row">
                                <div class="show-alert">
                                    <div class="span-none-padding-mini-2">
                                        <i class="{icon}"></i>
                                    </div>
                                    <div class="span-none-padding-mini-20">
                                        <p class="margin-left-10">
                                            {message}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {% block flashbag %}
                {% for type, messages in app.session.flashbag.all() %}
                    {% for message in messages %}
                        <input id="close-alert-{{ type }}-{{ loop.index }}" type="radio" class="checkbox-none" />
                        <div class="alert alert-{{ type }}">
                            <div class="container">
                                <div class="row">
                                    <div class="span-none-padding-mini-24">
                                        <label for="close-alert-{{ type }}-{{ loop.index }}" class="alert-label">
                                            <i class="tiecons tiecons-cross-light alert-close-icon"></i>
                                        </label>
                                        <div class="row">
                                            <div class="show-alert">
                                                <div class="span-none-padding-mini-2">
                                                    {% if type == "success" %}
                                                        <i class="tiecons tiecons-check color-green font-20"></i>
                                                    {% elseif type == "warning" or type == "danger" %}
                                                        <i class="tiecons tiecons-exclamation-mark-triangle color-red font-20"></i>
                                                    {% elseif type == "info" %}
                                                        <i class="tiecons tiecons-info color-blue font-20"></i>
                                                    {% endif %}
                                                </div>
                                                <div class="span-none-padding-mini-20">
                                                    <p class="margin-left-10">
                                                        {{ message }}
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}
            {% endblock %}

        </div>

        <div class="row">
            <div class="span-large-24">
                {% block pageBody %}
                {% endblock %}
            </div>
        </div>

        <div class="footer">
            <div class="container-fluid container-with-sidebar">
                <input type="checkbox" class="checkbox-none" id="quick-add"/>
                <label for="quick-add" class="quick-add">
                    <span class="tiecons tiecons-plus-angular"></span>
                    Quick actions
                </label>

                {{ knp_menu_render('quick_menu', {"template" : "TrinityAdminBundle::kmp_menu.html.twig"}) }}
            </div>
        </div>

        {% block adminjs %}

        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </div>
</body>
</html>


